{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HedgeX",
  "version": "0.1.0",
  "identifier": "com.hedgex.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "HedgeX - High-Frequency Trading",
        "width": 1280,
        "height": 720,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "migrations/*"
    ],
    "copyright": "Â© 2025 HedgeX. All rights reserved."
  }
}
